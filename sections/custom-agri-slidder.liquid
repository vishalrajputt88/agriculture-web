{% assign custom_agri_slider = section.id | replace: '_', '' | downcase %}

{% style %}
  .agri-slider-{{ custom_agri_slider }} {
    position: relative;
    width: {{ section.settings.desktop_width_percent }}%;
    max-width: 100%;
    display: block;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  /* ===== DESKTOP WRAPPER ===== */
  .agri-slider-wrapper-{{ custom_agri_slider }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 7;
  }

  .agri-slider-track-{{ custom_agri_slider }} {
    display: flex;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .agri-slider-slide-{{ custom_agri_slider }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_speed }}s ease-in-out;
    display: flex;
    align-items: center;
  }

  .agri-slider-slide-{{ custom_agri_slider }}.active {
    opacity: 1;
    z-index: 1;
  }

  .agri-slider-image-{{ custom_agri_slider }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_position }};
  }

  /* Mobile image - hidden on desktop */
  .agri-slider-mobile-image-{{ custom_agri_slider }} {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .agri-slider-placeholder-{{ custom_agri_slider }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #7cb342 0%, #558b2f 50%, #33691e 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .agri-slider-placeholder-{{ custom_agri_slider }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.15;
  }

