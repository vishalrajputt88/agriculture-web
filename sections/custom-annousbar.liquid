{% assign custom_announsebar = section.id | replace: '_', '' | downcase %}

{% style %}
  .announcement-bar-{{ custom_announsebar }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.background_color }};
    padding: 0;
    margin: 0;
  }

  .announcement-bar-container-{{ custom_announsebar }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1460px;
    padding: 12px 20px;
    gap: 20px;
    margin: 0 auto;
  }

  .announcement-bar-text-{{ custom_announsebar }} {
    color: {{ section.settings.text_color }};
    font-size: 14px;
    font-weight: 600;
    margin: 0;
    flex: 1;
  }

  .announcement-bar-links-{{ custom_announsebar }} {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-shrink: 0;
  }

  .announcement-bar-link-{{ custom_announsebar }} {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-size: 14px;
    white-space: nowrap;
  }

  .announcement-bar-link-{{ custom_announsebar }}:hover {
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
  .announcement-bar-links-{{ custom_announsebar }} {
 display: none;
  }

    .announcement-bar-container-{{ custom_announsebar }} {
      flex-direction: column;
      gap: 10px;
      padding: 10px 15px;
      text-align: center;
    }

    .announcement-bar-text-{{ custom_announsebar }} {
      font-size: 12px;
    }

    .announcement-bar-links-{{ custom_announsebar }} {
      gap: 15px;
    }

    .announcement-bar-link-{{ custom_announsebar }} {
      font-size: 12px;
    }
  }
{% endstyle %}

<announcement-bar-{{ custom_announsebar }} class="announcement-bar-{{ custom_announsebar }}" {{ section.shopify_attributes }}>
  <div class="announcement-bar-container-{{ custom_announsebar }}">
    <div class="announcement-bar-text-{{ custom_announsebar }}">
      {{ section.settings.announcement_text }}
    </div>
    <div class="announcement-bar-links-{{ custom_announsebar }}">
      {% if section.settings.menu != blank %}
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="announcement-bar-link-{{ custom_announsebar }}">
            {{ link.title }}
          </a>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</announcement-bar-{{ custom_announsebar }}>

<script>
  (function() {
    class AnnouncementBar{{ custom_announsebar }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('announcement-bar-{{ custom_announsebar }}', AnnouncementBar{{ custom_announsebar }});
  })();
</script>

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Get Up to 40% OFF On Bulk Purchasing | Use Code 'SAVE10' For Instant 10% Discount"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#16a34a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Links",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement bar"
    }
  ]
}
{% endschema %}
