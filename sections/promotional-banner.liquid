{% assign custom_promotional_banner = section.id | replace: '_', '' | downcase %}

{% style %}
  .promo-banners-{{ custom_promotional_banner }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .promo-banners-grid-{{ custom_promotional_banner }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    max-width: 1349px;
    margin: 0 auto;
    gap: 23px;
  }

  .promo-banner-item-{{ custom_promotional_banner }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .promo-banner-item-{{ custom_promotional_banner }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .promo-banner-placeholder-{{ custom_promotional_banner }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .promo-banner-placeholder-{{ custom_promotional_banner }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 989px) {
   
    .promo-banners-grid-{{ custom_promotional_banner }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
     .promo-banners-{{ custom_promotional_banner }} { padding: 0px 20px; }
    .promo-banners-grid-{{ custom_promotional_banner }} {
      gap: 10px;
    }
  }
{% endstyle %}

<div class="promo-banners-{{ custom_promotional_banner }}" {{ section.shopify_attributes }}>
  <div class="promo-banners-grid-{{ custom_promotional_banner }}">
    {% for i in (1..4) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign image = section.settings[image_key]
      %}
      
      <div class="promo-banner-item-{{ custom_promotional_banner }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 1000 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="promo-banner-placeholder-{{ custom_promotional_banner }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Promotional banners",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Promotional banners"
    }
  ]
}
{% endschema %}
