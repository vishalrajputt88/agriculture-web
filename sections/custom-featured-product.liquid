    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
  }

  .about-image-column-{{ cus_fea_product }} {
    width: 100%;
  }

  .about-image-wrapper-{{ cus_fea_product }} {
    border-radius: {{ section.settings.image_border_radius }}px;
    position: relative;
  }

  .about-product-card-{{ cus_fea_product }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .about-image-{{ cus_fea_product }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .about-image-placeholder-{{ cus_fea_product }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ section.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .about-image-placeholder-{{ cus_fea_product }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .about-empty-state-{{ cus_fea_product }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .about-add-to-cart-overlay-{{ cus_fea_product }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
    padding: {{ section.settings.overlay_padding }}px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

