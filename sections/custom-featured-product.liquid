<about-section-{{ cus_fea_product }} class="about-section-{{ cus_fea_product }}" {{ section.shopify_attributes }}>
  <div class="about-container-{{ cus_fea_product }}">
    <div class="about-image-column-{{ cus_fea_product }}">
      <div class="about-image-wrapper-{{ cus_fea_product }}">
        {% if section.settings.product_image %}
          <div class="about-product-card-{{ cus_fea_product }}">
            <img
              src="{{ section.settings.product_image | image_url: width: 1000 }}"
              alt="{{ section.settings.product_image.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.product_image.width }}"
              height="{{ section.settings.product_image.height }}"
              class="about-image-{{ cus_fea_product }}"
            >
            {% if section.settings.featured_product %}
              <div class="about-add-to-cart-overlay-{{ cus_fea_product }}">
                <button
                  type="button"
                  class="about-add-to-cart-button-{{ cus_fea_product }}"
                  data-product-id="{{ section.settings.featured_product.id }}"
                  data-variant-id="{{ section.settings.featured_product.selected_or_first_available_variant.id }}"
                  {% unless section.settings.featured_product.available %}disabled{% endunless %}
                >
                  {% if section.settings.featured_product.available %}
                    {{ section.settings.atc_button_text }}
                  {% else %}
                    {{ section.settings.sold_out_text }}
                  {% endif %}
                </button>
              </div>
            {% endif %}
          </div>
        {% else %}
          <div class="about-image-placeholder-{{ cus_fea_product }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
            <div class="about-empty-state-{{ cus_fea_product }}">
              Add your product showcase image
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="about-content-column-{{ cus_fea_product }}">
      {% if section.settings.tagline != blank %}
        <div class="about-tagline-{{ cus_fea_product }}">{{ section.settings.tagline }}</div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="about-heading-{{ cus_fea_product }}">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="about-subheading-{{ cus_fea_product }}">{{ section.settings.subheading }}</div>
      {% endif %}

      {% if section.settings.vision_title != blank or section.settings.vision_text != blank %}
        <div class="about-vision-section-{{ cus_fea_product }}">
          {% if section.settings.vision_title != blank %}
            <h3 class="about-section-title-{{ cus_fea_product }}">{{ section.settings.vision_title }}</h3>
          {% endif %}
          {% if section.settings.vision_text != blank %}
            <p class="about-section-text-{{ cus_fea_product }}">{{ section.settings.vision_text }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.mission_title != blank or section.settings.mission_text != blank %}
        <div class="about-mission-section-{{ cus_fea_product }}">
          {% if section.settings.mission_title != blank %}
            <h3 class="about-section-title-{{ cus_fea_product }}">{{ section.settings.mission_title }}</h3>
          {% endif %}
          {% if section.settings.mission_text != blank %}
            <p class="about-section-text-{{ cus_fea_product }}">{{ section.settings.mission_text }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="about-button-{{ cus_fea_product }}">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</about-section-{{ cus_fea_product }}>

<script>
  (function() {
    class AiAboutSection{{ cus_fea_product }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.addToCartButton = this.querySelector('.about-add-to-cart-button-{{ cus_fea_product }}');
        
        if (this.addToCartButton) {
          this.addToCartButton.addEventListener('click', this.handleAddToCart.bind(this));
        }
      }

      async handleAddToCart(event) {
        const button = event.target;
        const variantId = button.dataset.variantId;
        
        if (!variantId || button.disabled) return;

        const originalText = button.textContent;
        button.disabled = true;
        button.textContent = '{{ section.settings.adding_text }}';

        try {
          // Include section IDs so drawer HTML is returned in response
          const sectionIds = Array.from(
            document.querySelectorAll('cart-items-component[data-section-id]')
          ).map(el => el.dataset.sectionId).filter(Boolean);

          const payload = { id: variantId, quantity: 1 };
          if (sectionIds.length > 0) { payload.sections = sectionIds.join(','); }

          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
            body: JSON.stringify(payload)
          });

          if (!response.ok) throw new Error('Failed to add to cart');

          const addData = await response.json();

          button.textContent = '{{ section.settings.added_text }}';
          setTimeout(() => { button.textContent = originalText; button.disabled = false; }, 2000);

          // Fire CartAddEvent with sections â€” cart-items-component morphs drawer instantly
          document.dispatchEvent(new CustomEvent('cart:update', {
            bubbles: true,
            detail: {
              data: {
                source: 'product-form-component',
                itemCount: 1,
                sections: addData.sections || {}
              }
            }
          }));

          // Also fire cart:update for cart-icon count
          const cartResponse = await fetch('/cart.js');
          const cart = await cartResponse.json();
          document.dispatchEvent(new CustomEvent('cart:update', {
            bubbles: true,
            detail: { data: { itemCount: cart.item_count, source: 'product-form-component' } }
          }));

        } catch (error) {
          console.error('Error adding to cart:', error);
          button.textContent = '{{ section.settings.error_text }}';
          setTimeout(() => { button.textContent = originalText; button.disabled = false; }, 2000);
        }
      }
    }

    customElements.define('about-section-{{ cus_fea_product }}', AiAboutSection{{ cus_fea_product }});
  })();
</script>

