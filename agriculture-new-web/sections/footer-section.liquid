<footer-section-{{ custom_footer }} class="footer-{{ custom_footer }}" {{ section.shopify_attributes }}>
  <div class="footer-container-{{ custom_footer }}">
    {%- comment -%} â”€â”€ TOP BAR: Logo + Description â”€â”€ {%- endcomment -%}
    {% if section.settings.show_top_bar %}
      <div class="footer-top-bar-{{ custom_footer }}">
        <div class="footer-logo-section-{{ custom_footer }}">
          {% if section.settings.logo %}
            <img
              src="{{ section.settings.logo | image_url: width: 400 }}"
              alt="{{ section.settings.company_name | escape }}"
              class="footer-logo-{{ custom_footer }}"
              width="{{ section.settings.logo.width }}"
              height="{{ section.settings.logo.height }}"
              loading="lazy"
            >
          {% endif %}
          {% if section.settings.company_name != blank %}
            <h2 class="footer-company-name-{{ custom_footer }}">{{ section.settings.company_name }}</h2>
          {% endif %}
        </div>
        {% if section.settings.company_description != blank %}
          <div class="footer-description-{{ custom_footer }}">{{ section.settings.company_description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} â”€â”€ COLUMNS GRID â€” Loop through blocks â”€â”€ {%- endcomment -%}
    <div class="footer-columns-mains-{{ custom_footer }}">
      {%- comment -%} â”€â”€ COLUMN 1: Newsletter (always shown, from section settings) â”€â”€ {%- endcomment -%}
      <div class="footer-column-{{ custom_footer }}">
        <h3 class="footer-column-heading-{{ custom_footer }}" style="font-weight: 500;">
          {{ section.settings.newsletter_heading }}
        </h3>

        {% if section.settings.newsletter_subtext != blank %}
          <p class="footer-subtext-{{ custom_footer }}">{{ section.settings.newsletter_subtext }}</p>
        {% endif %}

        {% form 'customer', id: 'ContactFooter-{{ custom_footer }}' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="footer-email-form-{{ custom_footer }}">
            <input
              type="email"
              name="contact[email]"
              id="NewsletterForm--{{ custom_footer }}"
              class="footer-email-input-{{ custom_footer }}"
              value="{{ form.email }}"
              placeholder="{{ section.settings.email_placeholder }}"
              aria-label="Email address"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              required
              {% if form.errors %}
                aria-invalid="true"
              {% endif %}
            >
            <button type="submit" class="footer-email-submit-{{ custom_footer }}" name="commit" aria-label="Subscribe">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="{{ section.settings.submit_icon_color }}"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p class="footer-success-message-{{ custom_footer }}">{{ section.settings.success_message }}</p>
          {% endif %}
          {% if form.errors %}
            <p class="footer-error-message-{{ custom_footer }}">{{ form.errors.messages.email }}</p>
          {% endif %}
        {% endform %}

        {% if section.settings.show_social_media %}
          <h4 class="footer-social-heading-{{ custom_footer }}">{{ section.settings.social_heading }}</h4>
          <div class="footer-social-icons-{{ custom_footer }}">
            {% if section.settings.facebook_url != blank %}
              <a
                href="{{ section.settings.facebook_url }}"
                class="footer-social-icon-{{ custom_footer }}"
                aria-label="Facebook"
                target="_blank"
                rel="noopener"
              >
                {{ 'facebook.svg' | inline_asset_content }}
              </a>
            {% endif %}
            {% if section.settings.instagram_url != blank %}
              <a
                href="{{ section.settings.instagram_url }}"
                class="footer-social-icon-{{ custom_footer }}"
                aria-label="Instagram"
                target="_blank"
                rel="noopener"
              >
                {{ 'instagram.svg' | inline_asset_content }}
              </a>
            {% endif %}
            {% if section.settings.linkedin_url != blank %}
              <a
                href="{{ section.settings.linkedin_url }}"
                class="footer-social-icon-{{ custom_footer }}"
                aria-label="LinkedIn"
                target="_blank"
                rel="noopener"
              >
               {{ 'linkdin.svg' | inline_asset_content }}
              </a>
            {% endif %}
            {% if section.settings.google_url != blank %}
              <a
                href="{{ section.settings.google_url }}"
                class="footer-social-icon-{{ custom_footer }}"
                aria-label="Google"
                target="_blank"
                rel="noopener"
              >
                 {{ 'google.svg' | inline_asset_content }}
              </a>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_made_in_india %}
          <p class="footer-made-in-india-{{ custom_footer }}">{{ section.settings.made_in_india_text }}</p>
        {% endif %}

        {% if section.settings.show_payment_icons %}
          <div class="footer-payment-icons-{{ custom_footer }}">
            {% if section.settings.show_eway %}
              <span class="footer-payment-icon-{{ custom_footer }}">eWay</span>
            {% endif %}
            {% if section.settings.show_visa %}
              <span class="footer-payment-icon-{{ custom_footer }}">Visa</span>
            {% endif %}
            {% if section.settings.show_paypal %}
              <span class="footer-payment-icon-{{ custom_footer }}">PayPal</span>
            {% endif %}
            {% if section.settings.show_mastercard %}
              <span class="footer-payment-icon-{{ custom_footer }}">Mastercard</span>
            {% endif %}
            {% if section.settings.show_google_pay %}
              <span class="footer-payment-icon-{{ custom_footer }}">Google Pay</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
      <div class="footer-columns-{{ custom_footer }}">
        {%- comment -%} â”€â”€ BLOCK COLUMNS: Loop through footer_column blocks â”€â”€ {%- endcomment -%}
        {% for block in section.blocks %}
          {% if block.type == 'footer_column' %}
            <div class="footer-column-{{ custom_footer }}" {{ block.shopify_attributes }}>
              {%- comment -%} Column Heading {%- endcomment -%}
              {% if block.settings.column_heading != blank %}
                <h3 class="footer-column-heading-{{ custom_footer }}">{{ block.settings.column_heading }}</h3>
              {% endif %}

              {%- comment -%} Nav Links from link_list {%- endcomment -%}
              {% if block.settings.column_menu != blank %}
                <ul class="footer-nav-list-{{ custom_footer }}">
                  {% for link in linklists[block.settings.column_menu].links %}
                    <li>
                      {%- comment -%}
                        Check if this link title matches any of the highlight texts
                        Support multiple highlight titles separated by comma
                      {%- endcomment -%}
                      {% assign highlight_titles = block.settings.highlight_links | split: ',' %}
                      {% assign is_highlight = false %}
                      {% for ht in highlight_titles %}
                        {% assign ht_clean = ht | strip | downcase %}
                        {% assign link_clean = link.title | strip | downcase %}
                        {% if ht_clean == link_clean %}
                          {% assign is_highlight = true %}
                        {% endif %}
                      {% endfor %}

                      {% if is_highlight %}
                        <a
                          href="{{ link.url }}"
                          class="footer-nav-link-{{ custom_footer }} footer-nav-link-highlight-{{ custom_footer }}"
                        >
                          {{ link.title }}
                        </a>
                      {% else %}
                        <a href="{{ link.url }}" class="footer-nav-link-{{ custom_footer }}">
                          {{ link.title }}
                        </a>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {%- comment -%} end .footer-columns {%- endcomment -%}

    {%- comment -%} â”€â”€ BOTTOM BAR â”€â”€ {%- endcomment -%}
    <div class="footer-bottom-bar-{{ custom_footer }}">
      <p class="footer-copyright-{{ custom_footer }}">{{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer-section-{{ custom_footer }}>

<script>
  (function () {
    class FooterSection extends HTMLElement {
      connectedCallback() {
        const form = this.querySelector('form');
        if (form) {
          form.addEventListener('submit', (e) => {
            const email = form.querySelector('input[type="email"]');
            if (!email || !email.validity.valid) {
              e.preventDefault();
            }
          });
        }
      }
    }
    customElements.define('footer-section-{{ custom_footer }}', FooterSection);
  })();
</script>

