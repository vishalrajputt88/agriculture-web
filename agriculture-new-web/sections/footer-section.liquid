{% assign custom_footer = section.id | replace: '_', '' | downcase %}

{% comment %} Count footer_column blocks to set dynamic grid {% endcomment %}
{% assign col_count = 0 %}
{% for block in section.blocks %}
  {% if block.type == 'footer_column' %}
    {% assign col_count = col_count | plus: 1 %}
  {% endif %}
{% endfor %}

{% style %}
#NewsletterForm--{{ custom_footer }} { max-width: 250px; }
.footer-columns-mains-{{ custom_footer }} { display: grid; gap: 90px; 
    grid-template-columns: 23% 73%; }
  .footer-{{ custom_footer }} {
    display: block;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    width: 100%;
    padding: 60px 0 0;
  }

  .footer-container-{{ custom_footer }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* â”€â”€ Top Bar â”€â”€ */
  .footer-top-bar-{{ custom_footer }} {
    display: grid;
    gap: 90px;
    grid-template-columns: 23% 73%;
    padding-bottom: 30px;
    border-bottom: 1px solid {{ section.settings.divider_color }};
    margin-bottom: 40px;
  }

  .footer-logo-section-{{ custom_footer }} {
    display: flex;
    align-items: center;
    gap: 15px;
    flex-shrink: 0;
  }

  .footer-logo-{{ custom_footer }} {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
  }

  .footer-company-name-{{ custom_footer }} {
    font-size: {{ section.settings.company_name_size }}px;
    font-weight: 700;
    color: {{ section.settings.company_name_color }};
    margin: 0;
    white-space: nowrap;
  }

  .footer-description-{{ custom_footer }} {
    flex: 1;
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
  }

  /* â”€â”€ Columns Grid â€” dynamic based on block count â”€â”€ */
  .footer-columns-{{ custom_footer }} {
    display: grid;
    {% if col_count == 0 or col_count == 1 %}
      grid-template-columns: 1fr;
    {% elsif col_count == 2 %}
      grid-template-columns: repeat(2, 1fr);
    {% elsif col_count == 3 %}
      grid-template-columns: repeat(3, 1fr);
    {% else %}
      grid-template-columns: repeat(4, 1fr);
    {% endif %}
    gap: 40px;
    padding-bottom: 40px;
  }

  .footer-column-{{ custom_footer }} {
    display: flex;
    flex-direction: column;
  }

  /* â”€â”€ Column 1 â€” Newsletter â”€â”€ */
  .footer-column-heading-{{ custom_footer }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 20px;
  }

  .footer-subtext-{{ custom_footer }} {
    font-size: {{ section.settings.subtext_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
    margin-bottom: 15px;
  }

  .footer-email-form-{{ custom_footer }} {
    display: flex;
    gap: 0;
    margin-bottom: 25px;
    position: relative;
    align-items: center;
    gap: 8px;
  }

  .footer-email-input-{{ custom_footer }} {
    flex: 1;
    padding: 12px 50px 12px 20px;
    border: none;
    border-radius: 25px;
    background-color: {{ section.settings.input_bg_color }} !important;
    color: {{ section.settings.input_text_color }};
    font-size: 14px;
    outline: none;
  }

  .footer-email-input-{{ custom_footer }}::placeholder {
    color: {{ section.settings.input_placeholder_color }};
  }

  .footer-email-submit-{{ custom_footer }} {

   background-color: {{ section.settings.submit_button_color }};
    border: none;
    border-radius: 50%;
    width: 46px;
    height: 46px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .footer-email-submit-{{ custom_footer }}:hover {
