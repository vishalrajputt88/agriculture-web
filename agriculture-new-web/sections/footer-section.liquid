  }

  .footer-social-heading-{{ custom_footer }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 15px;
  }

  .footer-social-icons-{{ custom_footer }} {
    display: flex;
    gap: 12px;
    margin-bottom: 25px;
  }

  .footer-social-icon-{{ custom_footer }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    text-decoration: none;
    flex-shrink: 0;
  }

  .footer-social-icon-{{ custom_footer }}:hover {
    background-color: {{ section.settings.social_icon_hover_bg }};
    border-color: {{ section.settings.social_icon_hover_border }};
  }

  .footer-social-icon-{{ custom_footer }} svg {
    width: 35px;
    height: 35px;
    fill: {{ section.settings.social_icon_color }};
    stroke: none;
  }

  .footer-made-in-india-{{ custom_footer }} {
    font-size: 11px;
    color: {{ section.settings.text_color }};
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-payment-icons-{{ custom_footer }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .footer-payment-icon-{{ custom_footer }} {
    background-color: {{ section.settings.payment_icon_bg }};
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 11px;
    color: {{ section.settings.payment_icon_text }};
    font-weight: 600;
  }

  /* â”€â”€ Nav links (columns 2,3,4â€¦) â”€â”€ */
  .footer-nav-list-{{ custom_footer }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-nav-link-{{ custom_footer }} {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    transition: color 0.3s ease;
    display: block;
  }

  .footer-nav-link-{{ custom_footer }}:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .footer-nav-link-highlight-{{ custom_footer }} {
    color: {{ section.settings.highlight_link_color }} !important;
  }

  .footer-nav-link-highlight-{{ custom_footer }}:hover {
    color: {{ section.settings.highlight_link_hover_color }} !important;
  }

  /* â”€â”€ Bottom bar â”€â”€ */
