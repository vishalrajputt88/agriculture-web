{% assign custom_feature_blog = section.id | replace: '_', '' | downcase %}

{% liquid
  assign posts_to_show = section.settings.posts_to_show
  assign sort_order = section.settings.sort_order
  
  if section.settings.blog != blank
    assign blog = blogs[section.settings.blog]
    
    if sort_order == 'oldest'
      assign articles = blog.articles | reverse
    else
      assign articles = blog.articles
    endif
  endif
%}

{% style %}
  .featured-blogs-{{ custom_feature_blog }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
  }

  .featured-blogs-container-{{ custom_feature_blog }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .featured-blogs-heading-{{ custom_feature_blog }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: 32px;
    font-weight: 600;
    color: #000000;
  }

  .featured-blogs-grid-{{ custom_feature_blog }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  .featured-blog-card-{{ custom_feature_blog }} {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
  }

  .featured-blog-image-wrapper-{{ custom_feature_blog }} {
    width: 100%;
    /* aspect-ratio: 4 / 3; */
    overflow: hidden;
    /* border-radius: 8px; */
    margin-bottom: 16px;
    background-color: #f5f5f5;
  }

  .featured-blog-image-{{ custom_feature_blog }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-blog-card-{{ custom_feature_blog }}:hover .featured-blog-image-{{ custom_feature_blog }} {
    transform: scale(1.05);
  }

  .featured-blog-title-{{ custom_feature_blog }} {
    font-size: 16px;
    font-weight: 500;
    line-height: 1.4;
    color: #000000;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .featured-blogs-button-wrapper-{{ custom_feature_blog }} {
    text-align: center;
  }

  .featured-blogs-button-{{ custom_feature_blog }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ section.settings.button_bg_color }};
    color: #ffffff;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .featured-blogs-button-{{ custom_feature_blog }}:hover {
    background-color: {{ section.settings.button_bg_color | color_darken: 10 }};
    transform: translateY(-2px);
  }

  .featured-blog-placeholder-{{ custom_feature_blog }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .featured-blog-placeholder-{{ custom_feature_blog }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .featured-blogs-grid-{{ custom_feature_blog }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .featured-blogs-heading-{{ custom_feature_blog }} {
      font-size: 28px;
      margin-bottom: 32px;
    }
  }

  @media screen and (max-width: 749px) {
    .featured-blogs-grid-{{ custom_feature_blog }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .featured-blogs-heading-{{ custom_feature_blog }} {
      font-size: 24px;
      margin-bottom: 24px;
    }

    .featured-blogs-{{ custom_feature_blog }} {
      padding-top: {{ section.settings.padding_top | times: 0.7 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="featured-blogs-{{ custom_feature_blog }}" {{ section.shopify_attributes }}>
  <div class="featured-blogs-container-{{ custom_feature_blog }}">
    {% if section.settings.heading != blank %}
      <h2 class="featured-blogs-heading-{{ custom_feature_blog }}">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="featured-blogs-grid-{{ custom_feature_blog }}">
      {% if section.settings.blog != blank and articles.size > 0 %}
        {% for article in articles limit: posts_to_show %}
          <a href="{{ article.url }}" class="featured-blog-card-{{ custom_feature_blog }}">
            <div class="featured-blog-image-wrapper-{{ custom_feature_blog }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.image.alt | escape }}"
                  class="featured-blog-image-{{ custom_feature_blog }}"
                  loading="lazy"
                  width="600"
                  height="450"
                >
              {% else %}
                <div class="featured-blog-placeholder-{{ custom_feature_blog }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <h3 class="featured-blog-title-{{ custom_feature_blog }}">{{ article.title }}</h3>
          </a>
        {% endfor %}
      {% else %}
        {% for i in (1..4) %}
          <div class="featured-blog-card-{{ custom_feature_blog }}">
            <div class="featured-blog-image-wrapper-{{ custom_feature_blog }}">
              <div class="featured-blog-placeholder-{{ custom_feature_blog }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
            <h3 class="featured-blog-title-{{ custom_feature_blog }}">Sample Blog Post Title {{ i }}</h3>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.blog != blank %}
      <div class="featured-blogs-button-wrapper-{{ custom_feature_blog }}">
        <a href="{{ blog.url }}" class="featured-blogs-button-{{ custom_feature_blog }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Blogs",
  "tag": "section",
  "class": "featured-blogs-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Latest From Our Blog"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "posts_to_show",
      "label": "Number of posts to show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "sort_order",
      "label": "Sort order",
      "options": [
        {
          "value": "newest",
          "label": "Newest first"
        },
        {
          "value": "oldest",
          "label": "Oldest first"
        }
      ],
      "default": "newest"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "VIEW ALL BLOGS"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button background color",
      "default": "#2d7a3e"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Featured Blogs"
    }
  ]
}
{% endschema %}
