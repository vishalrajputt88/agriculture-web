{% assign featured_counter = section.id | replace: '_', '' | downcase %}

{% style %}
  .stats-counter-{{ featured_counter }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    margin-bottom: 70px;
  }

  .stats-counter-container-{{ featured_counter }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 20px;
    max-width: 1219px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .stats-counter-item-{{ featured_counter }} {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .stats-counter-number-{{ featured_counter }} {
    font-weight: 700;
    font-size: 36px;
    line-height: 1.2;
    margin: 0;
    display: inline-block;
  }

  .stats-counter-label-{{ featured_counter }} {
    font-size: 24px;
    color: {{ section.settings.counter_label_color }};
    margin-top: 6px;
    line-height: 1.4;
  }

  @media screen and (max-width: 989px) {
    .stats-counter-container-{{ featured_counter }} {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
      gap: 30px 20px;
    }
  }

  @media screen and (max-width: 749px) {
    .stats-counter-container-{{ featured_counter }} {
      {% if section.settings.columns_mobile == '1' %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}
      gap: 30px;
    }

    .stats-counter-number-{{ featured_counter }} {
      font-size: 28px;
    }
  }
{% endstyle %}
<section {{ section.shopify_attributes }}>
<stats-counter-{{ featured_counter }} class="stats-counter-{{ featured_counter }}" >
  <div class="stats-counter-container-{{ featured_counter }}">
    {% if section.settings.counter_1_number != blank %}
      <div class="stats-counter-item-{{ featured_counter }}">
        <div
          class="stats-counter-number-{{ featured_counter }}"
          data-target="{{ section.settings.counter_1_number }}"
          data-plus="{{ section.settings.counter_1_plus }}"
          style="color: {{ section.settings.counter_1_number_color }};"
        >
          0
        </div>
        <div class="stats-counter-label-{{ featured_counter }}">
          {{ section.settings.counter_1_label }}
        </div>
      </div>
    {% endif %}

    {% if section.settings.counter_2_number != blank %}
      <div class="stats-counter-item-{{ featured_counter }}">
        <div
          class="stats-counter-number-{{ featured_counter }}"
          data-target="{{ section.settings.counter_2_number }}"
          data-plus="{{ section.settings.counter_2_plus }}"
          style="color: {{ section.settings.counter_2_number_color }};"
        >
          0
        </div>
