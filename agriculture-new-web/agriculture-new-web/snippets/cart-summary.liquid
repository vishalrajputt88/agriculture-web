{%- doc -%}
  Renders the cart summary totals.

  @param {string} [accelerated_checkout_buttons_layout] - { 'vertical' } Forced layout of the additional checkout buttons, instead of relying on platform's layout.
  @param {string} [section_id] - The section ID for cart discount component.
{%- enddoc -%}

<div class="cart-totals">
  {% # We need to keep this node in place to allow morphing to work properly # %}
  <div class="cart-totals__original-container cart-primary-typography">
    {%- if cart.cart_level_discount_applications.size > 0 -%}
      <span class="cart-totals__item cart-totals__original">
        <span class="cart-totals__original-label">{{ 'content.cart_subtotal' | t }}</span>
        <span
          class="cart-totals__original-value cart-secondary-typography"
          data-testid="cart-subtotal-value"
        >
          {{- cart.items_subtotal_price | money -}}
        </span>
      </span>
      <ul
        class="cart-discounts"
        role="list"
        aria-label="{{ 'content.discounts' | t }}"
      >
        {%- for discount in cart.cart_level_discount_applications -%}
          <li class="cart-discounts__item agri-discount-item">
            <span class="cart-discounts__label">
              <span class="agri-discount-icon">üè∑Ô∏è</span>
              {{- 'icon-discount.svg' | inline_asset_content -}}
              {{ discount.title | escape }}
            </span>
            <span class="cart-discounts__value cart-secondary-typography agri-discount-value"
              >-{{ discount.total_allocated_amount | money -}}
            </span>
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>

  {% if settings.show_cart_note or settings.show_add_discount_code %}
    <div class="cart-actions">
      {% if settings.show_cart_note %}
        <script
          type="module"
          src="{{ 'cart-note.js' | asset_url }}"
        ></script>

        <cart-note style="display: flex;">
          <accordion-custom
            class="cart-note"
            {% if settings.cart_note_open_by_default %}
              open-by-default-on-desktop
              open-by-default-on-mobile
            {% endif %}
          >
            <details
              class="details"
              {% if settings.cart_note_open_by_default %}
                open
              {% endif %}
            >
              <summary class="cart-note__summary agri-accordion-summary">
                <span class="cart-note__label cart-primary-typography agri-accordion-label">
                  <span class="agri-accordion-icon">üìù</span>
                  {{ 'content.seller_note' | t }}
                </span>
                <span class="cart-totals__icon">
                  {{- 'icon-plus.svg' | inline_asset_content -}}
                </span>
              </summary>

              <div class="details-content cart-note__inner">
                <label
                  for="cart-note"
                  class="visually-hidden"
                >
                  {{- 'content.seller_note' | t -}}
                </label>
                <textarea
                  form="cart-form"
                  on:input="/updateCartNote"
                  id="cart-note"
                  class="cart-note__instructions agri-textarea"
                  name="note"
                >{{ cart.note }}</textarea>
              </div>
            </details>
          </accordion-custom>
        </cart-note>
      {% endif %}

      {% if settings.show_cart_note and settings.show_add_discount_code %}
        <div class="cart-actions__divider"></div>
      {% endif %}

      {% if settings.show_add_discount_code %}
        {% liquid
          assign discount_codes = cart.cart_level_discount_applications | where: 'type', 'discount_code' | map: 'title'
          for item in cart.items
            for allocation in item.line_level_discount_allocations
              if allocation.discount_application.type == 'discount_code'
                assign discount_codes = item.line_level_discount_allocations | slice: forloop.index0 | map: 'discount_application' | map: 'title' | concat: discount_codes
              endif
            endfor
          endfor
          assign discount_codes = discount_codes | uniq
          if discount_codes.size == 0
            assign disclosure_expanded = false
          else
            assign disclosure_expanded = true
          endif
        %}

        <accordion-custom class="cart-discount">
          <details
            class="details"
            {% if disclosure_expanded %}
              open
            {% endif %}
          >
            <summary class="cart-discount__summary agri-accordion-summary">
              <span class="cart-discount__label cart-primary-typography agri-accordion-label">
                <span class="agri-accordion-icon">üè∑Ô∏è</span>
                {{ 'content.discount' | t }}
              </span>
              <span class="cart-totals__icon">
                {{- 'icon-plus.svg' | inline_asset_content -}}
              </span>
            </summary>

            <div class="details-content">
              <div id="cart-discount-disclosure">
                <cart-discount-component
                  {% if section_id != blank %}
                    data-section-id="{{ section_id }}"
                  {% endif %}
                >
                  <div class="cart-discount__content">
                    <form
                      on:submit="/applyDiscount"
                      onsubmit="return false;"
                      class="cart-discount__form"
                    >
                      <label
                        for="cart-discount"
                        class="visually-hidden"
                      >
                        {{- 'accessibility.discount' | t -}}
                      </label>
                      <input
                        id="cart-discount"
                        class="cart-discount__input agri-input"
                        type="text"
                        name="discount"
                        size="8"
                        placeholder="{{ 'content.discount_code' | t }}"
                        required
                      >
                      <button
                        type="submit"
                        class="button cart-discount__button agri-apply-btn"
                      >
                        {{ 'actions.apply' | t }}
                      </button>
                    </form>
                  </div>
                  <div
                    class="cart-discount__error hidden"
                    role="alert"
                    ref="cartDiscountError"
                  >
                    <span class="svg-wrapper">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    <small
                      class="cart-discount__error-text cart-primary-typography hidden"
                      ref="cartDiscountErrorDiscountCode"
                    >
                      {{ 'content.discount_code_error' | t: code: 'test' }}
                    </small>
                    <small
                      class="cart-discount__error-text cart-primary-typography hidden"
                      ref="cartDiscountErrorShipping"
                    >
                      {{ 'content.shipping_discount_error' | t }}
                    </small>
                  </div>
                  <ul class="cart-discount__codes">
                    {% for discount_code in discount_codes %}
                      <li
                        class="cart-discount__pill agri-discount-pill"
                        data-discount-code="{{ discount_code }}"
                        aria-label="{{ 'accessibility.discount_applied' | t: code: discount_code }}"
                      >
                        <span class="agri-pill-leaf">üåø</span>
                        <p class="cart-discount__pill-code">
                          {{ discount_code }}
                        </p>
                        <button
                          type="button"
                          on:click="/removeDiscount"
                          class="cart-discount__pill-remove svg-wrapper svg-wrapper--smaller button-unstyled"
                          aria-label="{{ 'actions.remove_discount' | t: code: discount_code }}"
                        >
                          {{- 'icon-filters-close.svg' | inline_asset_content -}}
                        </button>
                      </li>
                    {% endfor %}
                  </ul>
                </cart-discount-component>
              </div>
            </div>
          </details>
        </accordion-custom>
      {% endif %}
    </div>
  {% endif %}

  {%- liquid
    if settings.currency_code_enabled_cart_total
      assign total_price = cart.total_price | money_with_currency
    else
      assign total_price = cart.total_price | money
    endif
  -%}

  <div class="cart-totals__container{% if settings.show_installments %} cart-totals__container--has-installments{% endif %}">
    <span
      class="cart-totals__item cart-totals__total agri-total-row"
      role="status"
    >
      <span class="cart-totals__total-label cart-primary-typography agri-total-label">
        <span class="agri-total-icon">üåæ</span>
        {{ 'content.cart_estimated_total' | t }}
      </span>
      <text-component
        ref="cartTotal"
        value="{{ total_price | strip_html }}"
        class="cart-totals__total-value cart-secondary-typography agri-total-value"
        data-testid="cart-total-value"
        data-cart-subtotal
      >
        {{ total_price }}
      </text-component>
    </span>
    {% if settings.show_installments %}
      <span class="cart-totals__item cart-totals__installments">
        {% form 'cart', cart %}
          {{ form | payment_terms }}
        {% endform %}
      </span>
    {% endif %}
    <div class="cart-totals__item cart-totals__tax-note cart-primary-typography agri-tax-note">
      {% render 'tax-info', has_discounts_enabled: settings.show_add_discount_code %}
    </div>
  </div>
</div>

<!-- Agriculture trust badges row -->
<div class="agri-trust-badges" aria-hidden="true">
  <span class="agri-trust-badge">üåæ 100% Natural</span>
  <span class="agri-trust-badge">üöú Farm Direct</span>
  <span class="agri-trust-badge">‚ôªÔ∏è Eco Packed</span>
  <span class="agri-trust-badge">üõ°Ô∏è Secure Pay</span>
</div>

<div class="cart__ctas">
  <button
    type="submit"
    id="checkout"
    class="cart__checkout-button button agri-checkout-btn"
    name="checkout"
    {% if cart == empty %}
      disabled
    {% endif %}
    form="cart-form"
  >
    <span class="button-text">
      <span class="agri-checkout-icon">üîí</span>
      {{ 'content.checkout' | t }}
    </span>
  </button>

  {% if additional_checkout_buttons and settings.show_accelerated_checkout_buttons %}
    <div
      class="
        additional-checkout-buttons
        {% if accelerated_checkout_buttons_layout == 'vertical' %}additional-checkout-buttons--vertical{% endif %}
      "
    >
      {{ content_for_additional_checkout_buttons }}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  /* ============================================
     AGRI THEME ‚Äî CART SUMMARY
  ============================================ */

  /* ‚îÄ‚îÄ Accordion labels (Discount / Note) ‚îÄ‚îÄ */
  .agri-accordion-summary {
    transition: color 0.2s;
  }
  .agri-accordion-summary:hover {
    color: var(--agri-leaf, #3a7d44) !important;
  }
  .agri-accordion-label {
    display: flex;
    align-items: center;
    gap: 6px;
  }
  .agri-accordion-icon {
    font-size: 14px;
  }

  /* ‚îÄ‚îÄ Discount input & button ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-input {
    border-color: var(--agri-border, #c5dfc0) !important;
    border-radius: 8px !important;
    background: var(--agri-sky, #eaf4ea) !important;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .agri-input:focus {
    border-color: var(--agri-leaf, #3a7d44) !important;
    box-shadow: 0 0 0 3px rgba(58, 125, 68, 0.15) !important;
    outline: none;
  }
  .agri-input::placeholder {
    color: #9ab89a !important;
  }

  .agri-apply-btn {
    background: var(--agri-leaf, #3a7d44) !important;
    color: #fff !important;
    border: none !important;
    border-radius: 8px !important;
    font-weight: 700 !important;
    letter-spacing: 0.5px;
    transition: background 0.2s, transform 0.15s !important;
  }
  .agri-apply-btn:hover {
    background: var(--agri-moss, #2d5a27) !important;
    transform: translateY(-1px);
  }

  /* ‚îÄ‚îÄ Discount pill ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-discount-pill {
    background: #e8f5e9 !important;
    border: 1.5px solid var(--agri-border, #c5dfc0) !important;
    color: var(--agri-moss, #2d5a27) !important;
    font-weight: 700 !important;
    gap: 4px !important;
  }
  .agri-pill-leaf {
    font-size: 12px;
  }

  /* ‚îÄ‚îÄ Discount applied saving display ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-discount-item {
    background: #fff9e6;
    border-radius: 6px;
    padding: 4px 8px;
    margin-bottom: 4px;
  }
  .agri-discount-value {
    color: #c0392b !important;
    font-weight: 700 !important;
  }

  /* ‚îÄ‚îÄ Textarea ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-textarea {
    border: 1.5px solid var(--agri-border, #c5dfc0) !important;
    border-radius: 8px !important;
    background: var(--agri-sky, #eaf4ea) !important;
    transition: border-color 0.2s;
  }
  .agri-textarea:focus {
    border-color: var(--agri-leaf, #3a7d44) !important;
    outline: none;
  }

  /* ‚îÄ‚îÄ Total row ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-total-row {
    padding: 10px 0 6px;
    border-top: 2px solid var(--agri-border, #c5dfc0) !important;
    margin-top: 4px;
  }
  .agri-total-label {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--agri-soil, #3d2b1f) !important;
  }
  .agri-total-icon {
    font-size: 16px;
  }
  .agri-total-value {
    color: var(--agri-moss, #2d5a27) !important;
    font-weight: 700 !important;
  }

  /* ‚îÄ‚îÄ Tax note ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-tax-note {
    font-size: var(--font-size--2xs);
    opacity: 0.75;
  }

  /* ‚îÄ‚îÄ Trust badges ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-trust-badges {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 6px;
    padding: 10px 14px;
    margin-bottom: 12px;
    background: var(--agri-sky, #eaf4ea);
    border: 1.5px solid var(--agri-border, #c5dfc0);
    border-radius: 8px;
  }
  .agri-trust-badge {
    font-size: 10px;
    font-weight: 700;
    color: var(--agri-moss, #2d5a27);
    letter-spacing: 0.4px;
    text-transform: uppercase;
    white-space: nowrap;
  }

  /* ‚îÄ‚îÄ Checkout button ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
  .agri-checkout-btn {
    background: linear-gradient(135deg, var(--agri-moss, #2d5a27), var(--agri-leaf, #3a7d44)) !important;
    border: none !important;
    border-radius: 10px !important;
    font-weight: 700 !important;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 16px rgba(45, 90, 39, 0.3) !important;
    transition: transform 0.15s, box-shadow 0.2s !important;
    position: relative;
    overflow: hidden;
  }
  .agri-checkout-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(255,255,255,0.12) 50%, transparent 100%);
    transform: translateX(-100%);
    transition: transform 0.45s;
  }
  .agri-checkout-btn:hover::before {
    transform: translateX(100%);
  }
  .agri-checkout-btn:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 22px rgba(45, 90, 39, 0.4) !important;
  }
  .agri-checkout-btn:active {
    transform: translateY(0) !important;
  }
  .agri-checkout-btn:disabled {
    opacity: 0.5 !important;
    transform: none !important;
    cursor: not-allowed;
  }
  .agri-checkout-icon {
    margin-right: 6px;
    font-size: 14px;
  }

