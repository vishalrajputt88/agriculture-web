{% assign custom_product_title = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-title-{{ custom_product_title }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .product-title-heading-{{ custom_product_title }} {
    font-weight: {{ block.settings.font_weight }};
    font-size: {{ block.settings.font_size_desktop }}px;
    line-height: {{ block.settings.line_height }};
    color: {{ block.settings.text_color }};
    {% if block.settings.enable_tight_spacing %}
      letter-spacing: -0.02em;
    {% else %}
      letter-spacing: normal;
    {% endif %}
    text-align: {{ block.settings.text_align }};
    margin: 0 0 {{ block.settings.margin_bottom }}px 0;
    text-transform: none;
  }

  @media screen and (max-width: 989px) {
    .product-title-heading-{{ custom_product_title }} {
      font-size: {{ block.settings.font_size_tablet }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .product-title-heading-{{ custom_product_title }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="product-title-{{ custom_product_title }}" {{ block.shopify_attributes }}>
  <h1 class="product-title-heading-{{ custom_product_title }}">
    {{ product.title }}
  </h1>
</div>

{% schema %}
{
  "name": "Product title",
  "settings": [
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_weight",
      "label": "Font weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "default": 700
    },
    {
      "type": "range",
      "id": "font_size_desktop",
      "label": "Desktop font size",
      "min": 20,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "font_size_tablet",
      "label": "Tablet font size",
      "min": 18,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 26
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "label": "Mobile font size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 22
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "checkbox",
      "id": "enable_tight_spacing",
      "label": "Enable tight letter spacing",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Product title"
    }
  ]
}
{% endschema %}
