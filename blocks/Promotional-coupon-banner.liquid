{% assign custom_discount_banner = block.id | replace: '_', '' | downcase %}

{% style %}
  .coupon-banner-{{ custom_discount_banner }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .coupon-banner__container-{{ custom_discount_banner }} {
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px dashed {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    max-width: 510px;
  }

  .coupon-banner__row-{{ custom_discount_banner }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }

  .coupon-banner__row-{{ custom_discount_banner }}:first-child {
    margin-bottom: {{ block.settings.row_gap }}px;
  }

  .coupon-banner__price-section-{{ custom_discount_banner }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .coupon-banner__lock-icon-{{ custom_discount_banner }} {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .coupon-banner__price-text-{{ custom_discount_banner }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  .coupon-banner__price-amount-{{ custom_discount_banner }} {
    font-weight: 700;
  }

  .coupon-banner__code-section-{{ custom_discount_banner }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .coupon-banner__code-label-{{ custom_discount_banner }} {
    font-size: {{ block.settings.code_font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }

  .coupon-banner__code-value-{{ custom_discount_banner }} {
    font-size: {{ block.settings.code_value_font_size }}px;
    color: {{ block.settings.code_color }};
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .coupon-banner__discount-text-{{ custom_discount_banner }} {
    font-size: {{ block.settings.discount_font_size }}px;
    color: {{ block.settings.discount_text_color }};
    line-height: 1.4;
  }

  .coupon-banner__copy-button-{{ custom_discount_banner }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: 10px 16px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: opacity 0.3s ease;
  }

  .coupon-banner__copy-button-{{ custom_discount_banner }}:hover {
    opacity: 0.9;
  }

  .coupon-banner__copy-icon-{{ custom_discount_banner }} {
    width: 14px;
    height: 14px;
  }

  @media screen and (max-width: 749px) {
    .coupon-banner__row-{{ custom_discount_banner }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .coupon-banner__container-{{ custom_discount_banner }} {
      padding: 12px;
    }
  }
{% endstyle %}

<coupon-banner-{{ custom_discount_banner }} class="coupon-banner-{{ custom_discount_banner }}" {{ block.shopify_attributes }}>
  <div class="coupon-banner__container-{{ custom_discount_banner }}">
    <div class="coupon-banner__row-{{ custom_discount_banner }}">
      <div class="coupon-banner__price-section-{{ custom_discount_banner }}">
        <svg class="coupon-banner__lock-icon-{{ custom_discount_banner }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.text_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        <div class="coupon-banner__price-text-{{ custom_discount_banner }}">
          {{ block.settings.price_text }} <span class="coupon-banner__price-amount-{{ custom_discount_banner }}">{{ block.settings.price_amount }}</span>
        </div>
      </div>
      <div class="coupon-banner__code-section-{{ custom_discount_banner }}">
        <span class="coupon-banner__code-label-{{ custom_discount_banner }}">{{ block.settings.code_label }}</span>
        <span class="coupon-banner__code-value-{{ custom_discount_banner }}">{{ block.settings.coupon_code }}</span>
      </div>
    </div>

    <div class="coupon-banner__row-{{ custom_discount_banner }}">
      <div class="coupon-banner__discount-text-{{ custom_discount_banner }}">
        {{ block.settings.discount_text }}
      </div>
      <button class="coupon-banner__copy-button-{{ custom_discount_banner }}" data-code="{{ block.settings.coupon_code }}" aria-label="Copy coupon code">
        <svg class="coupon-banner__copy-icon-{{ custom_discount_banner }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <span class="coupon-banner__button-text-{{ custom_discount_banner }}">{{ block.settings.button_text }}</span>
      </button>
    </div>
  </div>
</coupon-banner-{{ custom_discount_banner }}>

<script>
  (function() {
    class CouponBanner{{ custom_discount_banner }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.copyButton = this.querySelector('.coupon-banner__copy-button-{{ custom_discount_banner }}');
        this.buttonText = this.querySelector('.coupon-banner__button-text-{{ custom_discount_banner }}');
        this.originalText = this.buttonText.textContent;
        
        if (this.copyButton) {
          this.copyButton.addEventListener('click', this.handleCopy.bind(this));
        }
      }

      handleCopy() {
        const code = this.copyButton.getAttribute('data-code');
        
        if (navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard.writeText(code).then(() => {
            this.showCopiedFeedback();
          }).catch(() => {
            this.fallbackCopy(code);
          });
        } else {
          this.fallbackCopy(code);
        }
      }

      fallbackCopy(text) {
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        document.body.appendChild(textArea);
        textArea.select();
        
        try {
          document.execCommand('copy');
          this.showCopiedFeedback();
        } catch (err) {
          console.error('Failed to copy:', err);
        }
        
        document.body.removeChild(textArea);
      }

      showCopiedFeedback() {
        this.buttonText.textContent = 'COPIED!';
        this.copyButton.style.opacity = '0.7';
        
        setTimeout(() => {
          this.buttonText.textContent = this.originalText;
          this.copyButton.style.opacity = '1';
        }, 2000);
      }
    }

    customElements.define('coupon-banner-{{ custom_discount_banner }}', CouponBanner{{ custom_discount_banner }});
  })();
</script>

