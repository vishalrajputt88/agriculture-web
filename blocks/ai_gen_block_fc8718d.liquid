{% doc %}
  @prompt
    gen this price
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-price-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-product-price__container-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.alignment }};
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-product-price__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: {{ block.settings.price_weight }};
    color: {{ block.settings.price_color }};
    line-height: 1.2;
  }

  .ai-product-price__compare-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_size }}px;
    color: {{ block.settings.compare_color }};
    text-decoration: line-through;
    opacity: 0.7;
    line-height: 1.2;
  }

  .ai-product-price__badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 4px 12px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    font-size: {{ block.settings.badge_size }}px;
    font-weight: 600;
    border-radius: {{ block.settings.badge_radius }}px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-price__unit-{{ ai_gen_id }} {
    font-size: {{ block.settings.unit_size }}px;
    color: {{ block.settings.unit_color }};
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    .ai-product-price__container-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_alignment }};
    }

    .ai-product-price__price-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.price_size }}px * 0.85);
    }

    .ai-product-price__compare-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.compare_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-product-price-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-price__container-{{ ai_gen_id }}">
    {% if product.compare_at_price > product.price %}
      <span class="ai-product-price__compare-{{ ai_gen_id }}">
        {{ product.compare_at_price | money }}
      </span>
    {% endif %}

    <span class="ai-product-price__price-{{ ai_gen_id }}">
      {{ product.price | money }}
    </span>

    {% if product.compare_at_price > product.price and block.settings.show_sale_badge %}
      {% assign savings_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
      <span class="ai-product-price__badge-{{ ai_gen_id }}">
        {% if block.settings.badge_type == 'percent' %}
          -{{ savings_percent }}%
        {% else %}
          {{ block.settings.badge_text }}
        {% endif %}
      </span>
    {% endif %}

    {% if product.selected_or_first_available_variant.unit_price_measurement and block.settings.show_unit_price %}
      <div class="ai-product-price__unit-{{ ai_gen_id }}">
        {{ product.selected_or_first_available_variant.unit_price | money }}
        {% if product.selected_or_first_available_variant.unit_price_measurement.reference_value != 1 %}
          {{ product.selected_or_first_available_variant.unit_price_measurement.reference_value }}
        {% endif %}
        {{ product.selected_or_first_available_variant.unit_price_measurement.reference_unit }}
      </div>
    {% endif %}
  </div>
</div>

