      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Desktop alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "select",
      "id": "mobile_alignment",
      "label": "Mobile alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "header",
      "content": "Price"
    },
    {
      "type": "range",
      "id": "price_size",
      "label": "Size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "select",
      "id": "price_weight",
      "label": "Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Compare at price"
    },
    {
      "type": "range",
      "id": "compare_size",
      "label": "Size",
      "min": 10,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "compare_color",
      "label": "Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Sale badge"
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "label": "Show sale badge",
      "default": true
    },
    {
      "type": "select",
      "id": "badge_type",
      "label": "Badge type",
      "options": [
        {
          "value": "percent",
          "label": "Percentage off"
        },
        {
          "value": "text",
          "label": "Custom text"
        }
      ],
      "default": "percent"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Sale"
    },
    {
      "type": "range",
      "id": "badge_size",
      "label": "Size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color",
      "id": "badge_bg_color",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "badge_radius",
      "label": "Border radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 4
    },
    {
      "type": "header",
      "content": "Unit price"
    },
    {
      "type": "checkbox",
      "id": "show_unit_price",
      "label": "Show unit price",
      "default": true
    },
    {
      "type": "range",
      "id": "unit_size",
      "label": "Size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color",
      "id": "unit_color",
      "label": "Color",
      "default": "#666666"
    }
  ],
  "presets": [
    {
      "name": "Product price"
    }
  ]
}
{% endschema %}